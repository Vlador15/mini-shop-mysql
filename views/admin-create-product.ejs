<!DOCTYPE html>
<html dir="ltr" lang="ru">
   <!--<![endif]-->
   <head> 
      <%- include('includes/head')%> 
   </head>
   <body>
      <!-- Menu !--> 
      <%- include('includes/header')%>
      <div class="wrapper wrapper-shift">
             
         <div class="content-container">
            <%- include('includes/menu')%>  
            <div id="checkout-cart" class="container-fluid">
               <ul class="breadcrumb">
                  <li><a href="/">Главная</a></li> 
               </ul> 
                 
               <div class="row">   
                  
                  <div class="col-75">
                   <div class="container">
                     <form action="/admin/create-product" method="post" enctype="multipart/form-data" class="js-form-validate">

                        <fieldset id="data" style="min-height: 400px;">
                           <h3 style="padding-bottom: 2rem;">Добавление нового товара</h3>
                           <div class="form-group">
                              <select name="categoryId" class="select">
                                 <% categories.forEach(x => { %>
                                    <option value="<%- x.id %>" class="option"><%- x.name %></option>
                                 <% }) %> 
                              </select> 
                           </div> 
                           <div class="form-group">
                              <input type="text" name="title" placeholder="Название товара" class="form-control" required>
                           </div> 
                           <div class="form-group">
                              <input type="text" name="price" placeholder="Цена товара" class="form-control" required>
                           </div> 
                           <div class="form-group">
                              <input type="text" name="photo" placeholder="URL фотографии" class="form-control" required>
                           </div>  
                           <div class="form-group">
                              <input type="text" name="quantity" placeholder="Количество в наличие" class="form-control" required>
                           </div> 
                           <div class="form-group"> 
                              <textarea rows="4" style="width: 100%;" name="description" placeholder='Описание товара' required></textarea>
                           </div>
                        </fieldset> 
                       </div>

                       <input type="submit" value="Продолжить" class="btn-order">
                     </form>
                   </div>
                 </div>

               <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/inputmask/inputmask.js"></script>
               <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/inputmask/jquery.inputmask.js"></script>
               <script src="./scripts/order.js"></script>  
               </div> 
         </div>
      </div>
      <%- include('includes/footer')%> 
   </body>
</html>