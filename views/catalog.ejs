<!DOCTYPE html>
<html dir="ltr" lang="ru">
   <!--<![endif]-->
   <head>
      <%- include('includes/head')%> 
   </head>
   <body>
      <!-- Menu !--> 
      <%- include('includes/header')%> 
      <div class="wrapper wrapper-shift">  

         <div class="content-container">
            <%- include('includes/menu')%>  

            <div id="product-category" class="container-fluid">
               <ul class="breadcrumb">
                  <li><a href="/">Главная</a></li>
                  <li><a href="/catalog/<%- category.path %>"><%- category.name %></a></li>
               </ul>
               <div class="main-title">
                  <h1 class="main-title__h1"><%- category.name %></h1>
               </div>
               <div class="row">
                  <div id="content" class="col-sm-12">
                     <div class="form-indent">
                        <p><img src="/img/baner1.jpg" alt="" class="img-responsive"><br></p>
                     </div> 
                     <div class="row no-gutters" id="products">
                        <%  

                           function spaces(string) {
                              if (typeof string !== "string") string = string.toString();
                              return string.split("").reverse().join("").match(/[0-9]{1,3}/g).join(" ").split("").reverse().join("") + ' руб.';   
                           }; 

                           data.forEach( async(product) => {  
                        %>  

                        <div class="product-layout product-list col-lg-3 col-md-4 col-sm-4 col-xs-4" style="padding-right: 5px; padding-left: 5px; margin-bottom: 20px;">
                           <div class="product-thumb" id="<%= product.productId %>" style="min-height: 400px;">
                              <div class="image-catalog">
                                 <a href="/catalog/<%- product.path %>/<%- product.productId %>">
                                 <img src="<%- product.photo %>" alt="<%- product.title %>" title="<%- product.title %>" class="img-responsive" id="photo-catalog"  />
                                 </a>   
                              </div>
                              <div class="caption">
                                 <div class="price">
                                    <span class="price-main">
                                       <%- spaces(product.price) %> 
                                    </span>  
                                 </div>
                                 <a href="/catalog/<%- product.path %>/<%- product.productId %>" class="product-name"><%-product.title%></a>             
                                 <div class="button-group__flex" style="float: right; display: inline;">
                                    <p class="text">В наличие: <%- product.quantity %> ед.</p>
                                    <div class="button-group__btn" style="text-align: center; "> 
                                       <a href="/catalog/<%- product.path %>/<%- product.productId %>" class="btn btn-danger btn-lg" id="check-catalog" style="font-size: 15px;  width: 70%; border: none; color: #000; background-color: #FFE34F;">Посмотреть</a>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <% })  %>
                     </div>
                  </div>
               </div>
            </div> 

            <script type="text/javascript">
               const el = document.getElementById('content');
               el.scrollIntoView({behavior: "smooth"});
            </script>
            
            <div class="height-indent" style="margin-top: 100px;"></div>
            <%- include('includes/insert')%>    
         </div>
      </div> 
      <%- include('includes/footer')%> 
   </body>
</html>